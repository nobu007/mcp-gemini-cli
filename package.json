{
  "name": "@nobu007/mcp-gemini-cli",
  "version": "0.2.0",
  "description": "MCP server wrapper for Google's Gemini CLI",
  "author": "nobu007",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-gemini-cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gemini",
    "gemini-cli",
    "google",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nobu007/mcp-gemini-cli"
  },
  "bugs": {
    "url": "https://github.com/nobu007/mcp-gemini-cli/issues"
  },
  "homepage": "https://github.com/nobu007/mcp-gemini-cli#readme",
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch run index.ts",
    "web:dev": "node -e \"console.log('\\nâœ¨ MCP Gemini CLI Web Server is starting...\\n'); console.log('Local server: http://localhost:3000\\n'); console.log('To use with ClaudeCode, add the following to your settings:'); console.log(JSON.stringify({ 'gemini-local': { type: 'sse', url: 'http://localhost:3000/api/gemini-chat' }, 'gemini-command-local': { type: 'sse', url: 'http://localhost:3000/api/gemini-command' } }, null, 2)); console.log('\\n');\" && NEXT_DEBUG=true next dev",
    "web:build": "next build",
    "web:start": "next start",
    "build": "rm -rf dist && bun build --target=node --banner=$'#!/usr/bin/env node\n' --outdir=dist --sourcemap index.ts cli.ts",
    "build:prod": "rm -rf dist && bun build --target=node --banner=$'#!/usr/bin/env node\n' --outdir=dist --minify --sourcemap=none index.ts cli.ts",
    "lint": "biome lint .",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:fix": "biome lint --write .",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "format": "biome format --write .",
    "test": "bun test",
    "test:integration": "bun test tests/integration",
    "test:e2e": "playwright test",
    "prepare": "bun run build:prod && lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@playwright/test": "^1.56.0",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "lefthook": "^1.11.14",
    "markdownlint-cli2": "^0.18.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.16",
    "googleapis": "^150.0.1",
    "next": "^14.0.0",
    "postcss": "^8.4.31",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "zod": "^3.25.67"
  },
  "markdownlint-cli2": {
    "ignores": [
      "node_modules/**",
      ".git/**",
      ".claude/**",
      "tmp/**",
      "AGENTS.md"
    ],
    "config": {
      "default": true,
      "MD013": false,
      "MD033": false,
      "MD041": false,
      "no-hard-tabs": false
    },
    "fix": true,
    "customRules": []
  }
}
